# https://github.com/devcontainers/images/blob/3de4f2f5e967b9a2d3fde115e0c05909c0f373fe/src/python/.devcontainer/Dockerfile#L1

# [Choice] Python version (use -slim-bookworm or -slim-bullseye variants): 3-slim-bookworm, 3.11-slim-bookworm, 3.10-slim-bookworm, 3.9-slim-bookworm, 3.8-slim-bookworm
ARG VARIANT=3-slim-bookworm
FROM python:${VARIANT}

# Install devcontainer dependencies
RUN apt-get update && export DEBIAN_FRONTEND=noninteractive \
    && apt-get -y install --no-install-recommends \
        git \
        sudo \
        curl \
        ca-certificates \
        procps \
        lsb-release \
        jq \
        gcc \
        g++ \
        make \
        libc6-dev \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Create vscode user for devcontainer compatibility
RUN groupadd --gid 1000 vscode \
    && useradd --uid 1000 --gid vscode --shell /bin/bash --create-home vscode \
    && echo "vscode ALL=(ALL) NOPASSWD:ALL" > /etc/sudoers.d/vscode

